<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context="com.example.recordings.MainActivity">


    <!-- Header layout for title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeyboArd RecorDings"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <!-- Back button icon (you can replace this with an actual drawable) -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Table Layout -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginTop="16dp">

        <!-- Header Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EEEEEE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SR.NO"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME OF RECORDS"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIDI FILE"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <!-- Data Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100001A.WAV"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/08/2023"
                android:padding="8dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Icons for Delete and Share -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Delete icon -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="@android:color/transparent"
                    android:contentDescription="Delete"
                    android:padding="8dp" />

                <!-- Share icon -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="@android:color/transparent"
                    android:contentDescription="Share"
                    android:padding="8dp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>
